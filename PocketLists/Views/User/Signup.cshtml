@model SignupViewModel

<h1>Signup</h1>

<form asp-action="Create">
    <div class="form-group">
        <label for="dispaly-name">Display Name</label>
        <input asp-for="DisplayName" type="text" class="form-control" id="display-name" required />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="email" required />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="password" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Sign up" class="btn btn-primary" />
    </div>

</form>